FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 308.15;

Ta		308.15;
Tf		308.60;

boundaryField
{
    roads1
    {
        type            fixedValue;
        value           uniform $Ta;
    }
    roads3
    {
        type            fixedValue;
        value           uniform $Tf;
    }
    roads2
    {
        type            fixedValue;
        value           uniform $Tf;
    }
    south
    {
        type            zeroGradient;
	}
    west
    {
        type            fixedValue;
        value           uniform $Ta;
    }
    walls
    {
       type            fixedValue;
        value           uniform $Tf;
    }
    east
    {
        type            zeroGradient;
    }
    roofs
    {
        type            fixedValue;
        value           uniform $Tf;
    }
    north
    {
        type            zeroGradient;
    }
    atmosphere
    {
        type            symmetry;
    }
}


